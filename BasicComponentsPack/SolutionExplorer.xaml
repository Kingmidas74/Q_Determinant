<UserControl x:Class="BasicComponentsPack.SolutionExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:defaultControlsPack="clr-namespace:DefaultControlsPack;assembly=DefaultControlsPack"
             xmlns:internalClasses="clr-namespace:BasicComponentsPack.InternalClasses">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DefaultControlsPack;component/Themes/Resources/Container.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Path x:Key="FlowChartIcon" Stretch="Fill" Fill="{StaticResource BaseFontBrush}" Data="{StaticResource RightArrow}" Width="16" Height="16" VerticalAlignment="Center"/>
            <Path x:Key="ImplementationPlanIcon" Stretch="Fill" Fill="{StaticResource SuccessBrush}" Data="{StaticResource RightArrow}" Width="16" Height="16" VerticalAlignment="Center"/>
            <Path x:Key="ProjectIcon" Stretch="Fill" Fill="{StaticResource ActiveBrush}" Data="{StaticResource RightArrow}" Width="16" Height="16" VerticalAlignment="Center"/>
            <Path x:Key="SolutionIcon" Stretch="Fill" Fill="{StaticResource ErrorBrush}" Data="{StaticResource RightArrow}" Width="16" Height="16" VerticalAlignment="Center"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="{StaticResource BaseFontBrush}"/>
                <Setter Property="FontSize" Value="14"/>
                <EventSetter Event="MouseLeftButtonDown" Handler="ChooseTreeElement"/>
            </Style>
            
            
            
            <HierarchicalDataTemplate x:Key="Level4" DataType="{x:Type internalClasses:SolutionTreeItem}" ItemsSource = "{Binding Path=Items}">
                <StackPanel Orientation="Horizontal">
                    <ContentPresenter Margin="2,0,2,0" Content="{Binding Path=Icon}"/>
                    <TextBlock Text="{Binding Path=Title}" Tag="{Binding Path=FilePath}" Style="{StaticResource {x:Type TextBlock}}" IsEnabled="{Binding Path=Enabled}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="Level3" DataType="{x:Type internalClasses:SolutionTreeItem}" ItemsSource = "{Binding Path=Items}" ItemTemplate="{StaticResource Level4}">
                <StackPanel Orientation="Horizontal">
                    <ContentPresenter Margin="2,0,2,0" Content="{Binding Path=Icon}"/>
                    <TextBlock Text="{Binding Path=Title}" Tag="{Binding Path=FilePath}" Style="{StaticResource {x:Type TextBlock}}" IsEnabled="{Binding Path=Enabled}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="Level2" DataType="{x:Type internalClasses:SolutionTreeItem}" ItemsSource = "{Binding Path=Items}" ItemTemplate="{StaticResource Level3}">
                <StackPanel Orientation="Horizontal">
                    <ContentPresenter Margin="2,0,2,0" Content="{Binding Path=Icon}"/>
                    <TextBlock Text="{Binding Path=Title}" Tag="{Binding Path=FilePath}" Style="{StaticResource {x:Type TextBlock}}" IsEnabled="{Binding Path=Enabled}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="Level1" DataType="{x:Type internalClasses:SolutionTreeItem}" ItemsSource = "{Binding Path=Items}" ItemTemplate="{StaticResource Level2}">
                <StackPanel Orientation="Horizontal">
                    <ContentPresenter Margin="2,0,2,0" Content="{Binding Path=Icon}"/>
                    <TextBlock Text="{Binding Path=Title}" Tag="{Binding Path=FilePath}" Style="{StaticResource {x:Type TextBlock}}" IsEnabled="{Binding Path=Enabled}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </Grid.Resources>
        <defaultControlsPack:SearchTreeView x:Name="SearchTreeView" ItemTemplate="{StaticResource Level1}"/>
    </Grid>
</UserControl>
