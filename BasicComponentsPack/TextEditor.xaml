<UserControl x:Class="BasicComponentsPack.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DefaultControlsPack;component/Themes/Resources/Container.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <RichTextBox Name="ContentEditor" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{StaticResource SlaveBackgroundBrush}" Foreground="{StaticResource BaseFontBrush}" CaretBrush="{StaticResource ActiveBrush}" BorderThickness="0" TextChanged="ChangeContent" Style="{StaticResource BaseFont}"/>
</UserControl>
