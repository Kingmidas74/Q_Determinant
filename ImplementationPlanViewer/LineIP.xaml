<UserControl x:Class="ImplementationPlanViewer.LineIP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DefaultControlsPack;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Line X1="{Binding Path=X1, Mode=TwoWay}"
            Y1="{Binding Path=Y1, Mode=TwoWay}"
            X2="{Binding Path=X2, Mode=TwoWay}"
            Y2="{Binding Path=Y2, Mode=TwoWay}" Stroke="{DynamicResource BaseFontBrush}" StrokeThickness="0.5"/>
</UserControl>
