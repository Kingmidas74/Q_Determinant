<UserControl x:Class="ImplementationPlanViewer.PluginToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DefaultControlsPack;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ToolBar Band="0" BandIndex="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center" x:Name="PluginToolBar">
        <Button>
            <Path Stretch="Fill" Fill="{StaticResource ErrorBrush}" Data="{StaticResource Leave}"/>
        </Button>
    </ToolBar>
</UserControl>
