<UserControl x:Class="ModernControls.BasicTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModernControls;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <RichTextBox x:Name="EditableText" TextChanged="OnChanged" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Width="600" Foreground="{DynamicResource BasicFontColorBrush}"/>
</UserControl>
