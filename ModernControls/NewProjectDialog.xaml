<modernControls:MWindow x:Class="ModernControls.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:modernControls="clr-namespace:ModernControls"
        Title="NewProjectDialog" Width="300" ResizeMode="NoResize" Height="150">
    <modernControls:MWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModernControls;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </modernControls:MWindow.Resources>
    <StackPanel>
        <TextBlock FontSize="18" Text="Project title" Foreground="{DynamicResource BasicFontColorBrush}" />
        <TextBox x:Name="ResponseTextBox"/>
        <Button Content="OK" Click="OKButton_Click" Style="{StaticResource MTitleBarButtonStyle}" HorizontalContentAlignment="Center"/>
    </StackPanel>
</modernControls:MWindow>